<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreenSea</item>
        <item name="colorPrimaryDark">@color/colorGreenSea</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_effect</item>

    </style>

</resources>
